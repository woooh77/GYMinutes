<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingTop="80dp"
    android:paddingBottom="80dp"
    android:background="@color/white"
    android:layout_height="fill_parent" >

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="Next Exercise"
        android:textColor="@color/material_green"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/nExerciseName"
        android:textStyle="bold"
        android:text="Next Exercise Name"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/dialogTimer"
        android:text="0:00"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:text="Record More Sets"
        android:textColor="@color/white"
        android:background="@color/material_orange"
        android:id="@+id/record_more"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/material_green"
        android:layout_marginBottom="5dp"
        android:id="@+id/proceed_forward"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Let's Go >>"
        />

</LinearLayout>